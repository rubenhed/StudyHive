<div class="container show-desk-bg">
  <div class="row justify-content-center">
    <div class="col-8 text-center">
      <h1><%= @desk.title %></h1>
      <h2><%= @user.username %></h2>
      <div class="desk-img">
        <div class="calendar">
          <%= calendar(number_of_days: 1) do |date| %>
            <%= date.day %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
